.chat-group-form
  %h1 新規チャットグループ
  = form_for @group, html: {id: 'new_chat_group.new_chat_group'} do |f|
    - if @group.errors.any?
      .chat-group-form__errors
        %h2= "#{@group.errors.full_messages.count}件のエラーが発生しました。"
        %ul
          - @group.errors.full_messages.each do |message|
            %li= message
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label "グループ名", class: "chat-group-form__label", for: "chat_group_name"
      .chat-group-form__field--right
        = f.text_field :name, :placeholder => "グループ名を入力してください", id: 'chat_group_name', class: 'chat-group-form__input'
    .chat-group-form__field.clearfix
      / この部分はインクリメンタルサーチ（ユーザー追加の非同期化のときに使用します
      /
        <div class='chat-group-form__field--left'>
        <label class="chat-group-form__label" for="chat_group_チャットメンバーを追加">チャットメンバーを追加</label>
        </div>
        <div class='chat-group-form__field--right'>
        <div class='chat-group-form__search clearfix'>
        <input class='chat-group-form__input' id='user-search-field' placeholder='追加したいユーザー名を入力してください' type='text'>
        </div>
        <div id='user-search-result'></div>
        </div>
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label "チャットメンバー", class: "chat-group-form__label", for: "chat_group_チャットメンバー"
      .chat-group-form__field--right
        / グループ作成機能の追加時はここにcollection_check_boxesの記述を入れてください
        = f.collection_check_boxes :user_ids, User.all, :id, :name
        / <%= collection_check_boxes(:post, :author_ids, Author.all, :id, :name) do |b| %>
        / <%= b.label { b.check_box + b.text } %>
        /         <%= form_for(@post) do |f| %>
        / 　（中略）
        /   <div class="field">
        /      <%= f.label :tags %><br>
        /     <%= collection_check_boxes(:post, :tag_ids, Tag.all, :id, :label ) do |t|  %>
        /       <% t.label { t.check_box + t.text } %>
        /     <% end %>
        /   </div>
        /  以下略
        / <% end %>
        / この部分はインクリメンタルサーチ（ユーザー追加の非同期化のときに使用します
        /
          <div id='chat-group-users'>
          <div class='chat-group-user clearfix' id='chat-group-user-22'>
          <input name='chat_group[user_ids][]' type='hidden' value='22'>
          <p class='chat-group-user__name'>seo_kyohei</p>
          </div>
          </div>
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit "Save", class: "chat-group-form__action-btn", "data-disable-with" => "Save", name: nil
        / %input.chat-group-form__action-btn{"data-disable-with" => "Save", :name => "commit", :type => "submit", :value => "Save"}/
