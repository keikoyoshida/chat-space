.myStatus
  .myStatus__userName
    = current_user.name
  = link_to(content_tag(:i, '', class: 'fa fa-edit myStatus__createGroup'), new_group_path)
  / = link_to new_group_path do
  /   = fa_icon 'pencil-square-o', class: 'icon'
  = link_to(content_tag(:i, '', class: 'fa fa-cog myStatus__editAccount'), edit_user_path(current_user.id))
  / = link_to edit_user_path do
  /   = fa_icon 'cog', class: 'icon'

.groups
  %ul.groups__list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        %li.groups__list__item
          .groups__list__item__groupName
            = group.name
          .groups__list__item__latestMessage
            There is no message yet.
